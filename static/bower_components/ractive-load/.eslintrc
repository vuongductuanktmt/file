{
    "rules": {
        "indent": [ 2, "tab" ],
        "no-mixed-spaces-and-tabs": ["error", "smart-tabs"],
        "quotes": [ 2, "single" ],
        "linebreak-style": [ 2, "unix" ],
        "semi": [ 2, "always" ]
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    }
}
